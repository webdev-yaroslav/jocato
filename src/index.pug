extends html/layout/_layout
block vars
  - var pageName = 'Изделия из кожи ручной работы'

block content
  .page-content
    section.main
      .hero
        p Мастерская по изготовлению изделий из натуральной кожи ручной работы
    section.craft
      .container 
        h1 наши изделия
        .craft__wrapper
          .craft__items 
            a(href="").hover-text-one.coshel-adap
              figure.effect-text-one 
                img(src="@img/coshel.png", alt="кошельки")
                figcaption
                  h3 кошельки
            a(href="").hover-text-one.coshel-adap
              figure.effect-text-one 
                img(src="@img/bags.png", alt="сумки")
                figcaption
                  h3 сумки
            a(href="").hover-text-one 
              figure.effect-text-one 
                img(src="@img/remni.png", alt="ремни")
                figcaption
                  h3 ремни
            a(href="").hover-text-one.oblozh-adap 
              figure.effect-text-one 
                img(src="@img/oblozh.png", alt="аксессуары")
                figcaption
                  h3 аксессуары
            a(href="catalog.html").lookingcatalog
              h3 смотреть каталог
          //- a(href="#works").undertext примеры работ
    section.work
      .container
        h1 наши работы
      .gallery
        .gallery__card
          img(src="@img/gallery/bag1.png", alt="").gallery__card__pic
        .gallery__card
          img(src="@img/gallery/bag2.png", alt="").gallery__card__pic
        .gallery__card
          img(src="@img/gallery/bag3.png", alt="").gallery__card__pic
        .gallery__card
          img(src="@img/gallery/remen1.png", alt="").gallery__card__pic
        .gallery__card
          img(src="@img/gallery/remen2.png", alt="").gallery__card__pic
        .gallery__card
          img(src="@img/gallery/remen3.png", alt="").gallery__card__pic
      .slider
        .slider__container 
          button.slider__btn.slider__btn_left
            i.fas.fa-chevron-left
          button.slider__btn.slider__btn_right
            i.fas.fa-chevron-right
        button.slider__close 
          i.far.fa-times-circle
    section.contacts 
      #contact.container 
        h1 контакты
