extends html/layout/_footerheader2
block vars
  - var pageName = 'JOCATO - Изделия из кожи'

block content
  .page-content
    section.leather
      .container
        .leather__menu
          h1 изделия из кожи
          ul 
            li: a(href="") Кошельки
            li: a(href="") Сумки
            li: a(href="") Ремни
            li: a(href="") Аксессуары
        .leather__item
          h2 кошельки


        .leather__item
          h2 сумки
          .products
            .products__item
              .product__img 
                .swiper.mySwiper
                  .swiper-wrapper
                    .swiper-slide
                      img(src="@img/catalog/leather/bag-item1.png", alt="")
                    .swiper-slide
                      img(src="@img/catalog/leather/bag-item12.png", alt="")
                    .swiper-slide
                      img(src="@img/catalog/leather/bag-item13.png", alt="")
                  .swiper-pagination
              ul
                li В наличии
                  img(src="@img/ic20-check.svg", alt="")
                li Ручная работа - каждая сумка Jocato изготовлена мастером вручную;
                li Натуральная кожа - практичный и долговечный материал;
                li Цвет на выбор - доступна широкая цветовая палитра.
              button заказать